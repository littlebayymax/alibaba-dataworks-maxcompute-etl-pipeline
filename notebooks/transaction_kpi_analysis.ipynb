# Banking Transaction KPI Analysis Notebook
# Purpose: Query Hologres table and visualize key metrics

import pandas as pd
import matplotlib.pyplot as plt
import psycopg2  # Hologres is Postgres-compatible

# Connect to Hologres
conn = psycopg2.connect(
    host='your-hologres-host',
    port=5432,
    user='your-username',
    password='your-password',
    database='your-database'
)

query = """
SELECT dt, account_type, region, total_amount, active_users
FROM hologres_daily_transactions
WHERE dt BETWEEN '2025-11-01' AND '2025-11-22';
"""

df = pd.read_sql(query, conn)

# Data preprocessing
df['dt'] = pd.to_datetime(df['dt'])
df_summary = df.groupby('dt').agg({'total_amount': 'sum', 'active_users': 'sum'}).reset_index()

# Plot daily total transaction amount
plt.figure(figsize=(10,5))
plt.plot(df_summary['dt'], df_summary['total_amount'], marker='o')
plt.title('Daily Total Transaction Amount')
plt.xlabel('Date')
plt.ylabel('Total Amount (SGD)')
plt.xticks(rotation=45)
plt.grid(True)
plt.show()

# Plot daily active users
plt.figure(figsize=(10,5))
plt.plot(df_summary['dt'], df_summary['active_users'], marker='o', color='orange')
plt.title('Daily Active Users')
plt.xlabel('Date')
plt.ylabel('Number of Users')
plt.xticks(rotation=45)
plt.grid(True)
plt.show()

# Total amount by account type
df_account = df.groupby('account_type')['total_amount'].sum().reset_index()
df_account.plot(kind='bar', x='account_type', y='total_amount', figsize=(8,5), title='Total Transaction Amount by Account Type', legend=False)
plt.ylabel('Total Amount (SGD)')
plt.show()

conn.close()
